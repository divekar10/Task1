@model Task1.Models.Category
@{
    ViewBag.Title = "AddCat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Category</h2>

<p>
    @Html.ActionLink("BAck To Category List", "Index", "Category", null, new { @class = "btn btn-primary" })
</p>


@using (Html.BeginForm("Save", "Category"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CatName)
        @Html.TextBoxFor(m => m.CatName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CatName);
    </div>
   
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}


